%section.p-section-card
  .p-section-card__header.p-content-header
    %h2.p-content-header__title Stocks
    = link_to 'New Stock', new_stock_path, class: 'c-button c-button--primary'

  .p-section-card__content
    %table
      %thead
        %tr
          %th
          %th
          %th

      %tbody
        %tr
          %th 名称
          %th 住所
          %th
        - @places.each do |place|
          %tr
            %td= place.name
            %td= place.address
            %td= link_to '詳細', place_path(place), class: 'c-button'
